---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout title="404 - Page Not Found">
  <div class="min-h-screen flex items-center justify-center bg-sand-50">
    <div class="text-center">
      <h1 class="text-6xl font-serif font-bold text-ocean-500 mb-4">404</h1>
      <p class="text-xl text-storm-500 mb-4">Oops! Page not found</p>
      <a href="/" class="text-coral-400 hover:text-coral-500 underline font-medium">
        Return to Home
      </a>
    </div>
  </div>
</Layout>